<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:background="@color/Culoare_fundal">

    <ImageView
        android:layout_width="@dimen/_300sdp"
        android:layout_height="@dimen/_230sdp"
        android:src="@drawable/bus_24"
        android:layout_marginTop="@dimen/_10sdp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Register"
        android:textColor="@color/Culoare_text"
        android:textSize="@dimen/_30sdp"
        android:textStyle="bold"
        android:letterSpacing="0.03"/>
    <EditText
        android:id="@+id/email"
        android:layout_width="@dimen/_280sdp"
        android:layout_height="@dimen/_35sdp"
        android:hint="Email"
        android:drawableLeft="@drawable/utilizator"
        android:background="@drawable/text"
        android:textColor="@color/Culoare_text"
        android:textColorHint="@color/Culoare_text"
        android:textStyle="bold"
        android:layout_marginTop="@dimen/_25sdp"
        android:paddingLeft="@dimen/_20sdp"
        android:inputType="textEmailAddress"/>
    <EditText
        android:id="@+id/parola"
        android:layout_width="@dimen/_280sdp"
        android:layout_height="@dimen/_35sdp"
        android:hint="Parola"
        android:drawableLeft="@drawable/parola"
        android:background="@drawable/text"
        android:textColor="@color/Culoare_text"
        android:textColorHint="@color/Culoare_text"
        android:textStyle="bold"
        android:layout_marginTop="@dimen/_18sdp"
        android:paddingLeft="@dimen/_20sdp"
        android:inputType="textPassword"/>
    <EditText
        android:id="@+id/confirmaParola"
        android:layout_width="@dimen/_280sdp"
        android:layout_height="@dimen/_35sdp"
        android:hint="Confirma parola"
        android:drawableLeft="@drawable/parola"
        android:background="@drawable/text"
        android:textColor="@color/Culoare_text"
        android:textColorHint="@color/Culoare_text"
        android:textStyle="bold"
        android:layout_marginTop="@dimen/_18sdp"
        android:paddingLeft="@dimen/_20sdp"
        android:inputType="textPassword"/>



    <Button
        android:id="@+id/inregistrareBtn"
        android:layout_width="@dimen/_280sdp"
        android:layout_height="@dimen/_40sdp"
        android:background="@drawable/buton"
        android:text="REGISTER"
        android:textColor="@color/Culoare_text"
        android:textSize="@dimen/_14sdp"
        android:textStyle="bold"
        android:layout_marginTop="@dimen/_20sdp"/>
    <TextView
        android:id="@+id/conectareCont"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ai deja un cont? Conecteaza-te aici!"
        android:textStyle="bold"
        android:textSize="@dimen/_15sdp"
        android:textColor="@color/Culoare_text"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/_10sdp"/>


</LinearLayout>